<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Runnica" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_cielo</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondaryVariant">@color/navy</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="titleTextColor">@color/navy</item>

    </style>

    <style name="NavigationBar">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/navy</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="titleTextStyle">@color/navy</item>
    </style>

    <style name="Theme.Runnica.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Runnica.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Runnica.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>